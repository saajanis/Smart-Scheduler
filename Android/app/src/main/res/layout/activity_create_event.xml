<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zazulabs.apoorva.smart_scheduler.CreateEvent">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/CreateEvent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/name"
                android:layout_marginTop="20dp"
                android:hint="Event Name"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/startDate"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:hint="Event can start from…"
                android:inputType="date" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/endDate"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:hint="…but should take place by…"
                android:inputType="date" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/duration"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:hint="Duration"
                android:inputType="textPersonName"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/decideByDate"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:hint="Meeting should be decided by..."
                android:inputType="date" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/invitees"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:hint="Add Invitee(s)"
                android:inputType="textMultiLine"
                android:onClick="callContacts"
                android:text=""/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/msg"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:hint="Say more about your event"
                android:inputType="textMultiLine"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Create Event"
                android:id="@+id/btnAdd"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:enabled="false"/>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
